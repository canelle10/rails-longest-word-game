<div class="container">

<div class="letter">
    <% @letters.each do |letter| %>
     <ul><%= letter.capitalize %>
     </ul>
    <%end%>
</div>

<form action="/score" method="post">
  <input type="text" name="answer">
  <input type="text" value="<%= @letters.join %>" name='letters' hidden>
  <input type="submit">
  <%= image_tag 'pixar.jpeg', class: 'image' %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
</div>
